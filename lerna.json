{
  "packages": ["packages/*"],
  "version": "independent",
  "npmClient": "npm",
  "command": {
    "add": {
      "exact": true
    },
    "publish": {
      "conventionalCommits": true,
      "exact": true
    },
    "version": {
      "message": "chore(release): release",
      "exact": true
    },
    "bootstrap": {
      "hoist": false,
      "nohoist": "gatsby"
    },
    "ignoreChanges": ["**/ixtures/**", "**/tests/**", "**/*.md"]
  }
}
